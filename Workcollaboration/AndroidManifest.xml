<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sheikbro.onlinechat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Work Collabration"
        android:largeHeap="true"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name="com.WorkCollabration.App.MainActivity"
            android:icon="@drawable/ic_launcher"
            android:label="Work Collabration"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.WorkCollabration.App.Loginpage"
            android:label="@string/title_activity_loginpage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.Signup"
            android:label="@string/title_activity_loginpage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.Homepage"
            android:label="@string/title_activity_homepage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.Verification"
            android:label="@string/title_activity_homepage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.AddContact"
            android:label="@string/title_activity_add_contact"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.ChatWindow"
            android:label="@string/title_activity_add_contact"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.Image"
            android:label="@string/title_activity_image" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.Audio"
            android:label="@string/title_activity_audio" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.Video"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:name="com.WorkCollabration.App.Grouppage"
            android:label="@string/title_activity_grouppage"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.WorkCollabration.App.Reminderservice" >
        </service>
    </application>

</manifest>